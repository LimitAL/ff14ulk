/* pages/brokenCrystal/brokenCrystal.wxss */

.container {
  display: flex;
  height: 100%;
}

.content {
  display: flex;
  flex-direction: column;
  flex: 1 0 0;
  padding: 5px;
  background-color: #f2f2f2;
  font-size: 12px;
}

.panel {
  margin-bottom: 10px;
}

.panel-content {
  padding: 10px 20px;
}

.panel-content>view {
  display: list-item;
  list-style-position: inside;
  list-style-type: decimal-leading-zero;
}

.empty-data {
  color: #999;
}