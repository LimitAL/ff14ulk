/* pages/info/info.wxss */

.container {
  height: 100%;
  background-color: #dfdfdf;
}

.header {
  position: relative;
  height: 300rpx;
  width: 100%;
  overflow: hidden;
}

.bg-img {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  width: inherit;
  height: 300rpx;
  opacity: 0.5;
}

.avator {
  position: absolute;
  margin-top: 20rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  left: 50%;
  transform: translateX(-50%);
}

.welcome {
  position: absolute;
  left: 50%;
  bottom: 20rpx;
  transform: translateX(-50%);
  color: #fff;
  font-weight: 600;
  text-shadow: 4rpx 4rpx 4rpx #000;
}

.item-text {
  color: #999;
}

.body {
  margin: 10rpx 0;
}

.item {
  position: relative;
  margin-top: 10rpx;
  padding: 10rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #fff;
  align-items: center;
}

.item-icon,
.right-img {
  margin: 0 10rpx;
  height: 50rpx;
  width: 50rpx;
}

.right {
  position: absolute;
  top: 20rpx;
  right: 0;
}