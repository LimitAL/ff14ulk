/* pages/weather/weather.wxss */

.container {
  min-height: 100%;
}

.left {
  position: relative;
  width: 150rpx;
  /* border-right: 2rpx solid #dfdfdf; */
}

.area-item {
  padding: 20rpx 0;
  text-align: center;
  /* border-bottom: 2rpx solid #dfdfdf; */
}

.number-select {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx 0;
  background-color: #1296db;
  color: #fff;
  text-align: center;
  font-size: 26rpx;
}

.selected {
  background-color: #19be6b;
  color: #fff;
}

.right {
  position: relative;
  width: 100%;
}

.now-time {
  display: flex;
  padding: 10rpx 20rpx;
  justify-content: space-between;
  background-color: #fff;
  box-shadow: 5px 5px 10px #000;
}

.et-time {
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  border-radius: 6rpx;
  background-color: #1296db;
  color: #fff;
  width: 200rpx;
}

.clock-icon {
  margin-right: 4px;
  width: 40rpx;
  height: 40rpx;
}

.area-name {
  /* border: 2rpx solid #1296db; */
  border-radius: 6rpx;
  padding: 10rpx 20rpx;
  color: #ff976a;
}

.scroll {
  position: absolute;
  top: 80rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #f2f2f2;
}

.item {
  margin: 10rpx 20rpx;
  border-radius: 14rpx;
  padding: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  box-shadow: 10rpx 10rpx 10rpx #999;
  justify-content: space-between;
  background-color: #fff;
}

.current {
  margin-bottom: 80rpx;
}

.weather-icon {
  height: 80rpx;
  width: 80rpx;
}

.weather-name {
  margin-left: 20rpx;
}

.item-time {
  line-height: 40rpx;
  font-size: 28rpx;
}

.weather-et {
  text-align: center;
  color: #fff;
}

.mornning {
  background-color: #008B45;
}

.night {
  background-color: #062e88;
}

.dusk {
  background-color: #9c2f0d;
}

.tips {
  position: relative;
  margin: 20rpx;
  font-size: 34rpx;
  color: #1989fa;
  text-shadow: 2px 2px 4px #999;
}

.tip-near {
  position: absolute;
  bottom: -190rpx;
}